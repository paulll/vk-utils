html, body
	margin 0
	font-family "DejaVu Sans Mono", monospace

.user
	margin 10px
	padding 10px
	border 1px solid gray

	.name
		margin 10px
		a:nth-child(2)
			opacity 1
			margin-left 10px

		a:first-child
			font-weight bold
			text-decoration none
			color black


	.avatar
		width 280px
		height 280px
		background-size contain
		margin 10px
		border 2px gray solid

	.activity
		margin 10px
		margin-top 0
		font-size 90%
		.seen
			opacity 0.7

	.wrap .wrap
		margin 10px
		font-size 90%

		.sections
			height 200px
			overflow overlay

			a
				display block


.h, .v
	display flex

.h
	flex-direction column

canvas
	width 300px
	height 300px